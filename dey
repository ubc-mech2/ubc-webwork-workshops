##DESCRIPTION
##  Operation Amplifiers
##ENDDESCRIPTION

##KEYWORDS('Op Amps','operational','amplifier','voltage follower')

## DBsubject('Electrical Engineering')
## DBchapter('Circuit Analysis')
## DBsection('Op Amps')
## Date('2017/Dec/04')
## Author('L.R.Linares, llinares@ece.ubc.ca')
